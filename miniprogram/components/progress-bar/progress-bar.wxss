.progress-bar-container {
  width: 100%;
}

.progress-bar-background {
  width: 100%;
  height: 16rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-bar-inner {
  height: 100%;
  background: linear-gradient(90deg, #66a6ff 0%, #89f7fe 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease-out; /* 核心动画效果 */
}