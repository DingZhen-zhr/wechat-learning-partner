/* 页面容器：占满全屏，列布局 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 聊天列表区域 */
.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.chat-item.right {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #ddd;
  margin: 0 10rpx;
  flex-shrink: 0;
}

.bubble {
  padding: 20rpx;
  border-radius: 10rpx;
  max-width: 70%;
  font-size: 30rpx;
  line-height: 1.5;
  word-wrap: break-word;
}

.ai-bubble {
  background-color: #fff;
  border: 1rpx solid #eee;
  border-top-left-radius: 0;
}

.user-bubble {
  background-color: #95ec69; /* 微信绿 */
  border: 1rpx solid #8ad961;
  border-top-right-radius: 0;
}

/* 加载动画 */
.loading-wrap {
  text-align: center;
  margin-bottom: 20rpx;
  color: #999;
  font-size: 24rpx;
}

/* 底部输入区 */
.input-area {
  background-color: #f7f7f7;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e5e5e5;
  min-height: 100rpx;
}

.icon-btn {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.text-input {
  flex: 1;
  background-color: #fff;
  height: 72rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}

.voice-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  border-radius: 8rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  font-size: 30rpx;
  color: #333;
  user-select: none;
}

.voice-btn.recording {
  background-color: #dcdcdc;
  color: #666;
}

.send-btn {
  margin-left: 20rpx;
  background-color: #07c160;
  color: white;
  padding: 10rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}