/* pages/focus/focus.wxss */
.focus-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100vh;
  width: 100vw;
  background-color: #f7f8fa; /* 使用更柔和的背景色 */
  padding: 40rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景呼吸动画 */
.background-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 200vw;
  height: 200vw;
  background-image: radial-gradient(circle, #a8c0ff 0%, #f7f8fa 60%);
  transform: translate(-50%, -50%);
  opacity: 0.5;
  animation: glow-breathe 10s ease-in-out infinite;
  z-index: 0;
}

@keyframes glow-breathe {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.5;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.7;
  }
}

/* 所有前景内容 */
.partner-section, .timer-section, .actions-section {
  z-index: 1;
}

/* 伙伴区域 */
.partner-section {
  position: relative;
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
  height: 120rpx;
}

.bubble-wrapper {
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(60rpx) scale(0.8);
  opacity: 0;
  transition: all 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
}

.bubble-wrapper.show {
  transform: translateX(60rpx) scale(1);
  opacity: 1;
}

.bubble {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 40rpx;
  padding: 18rpx 30rpx;
  font-size: 28rpx;
  color: #555;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  position: relative;
  max-width: 450rpx;
}

.bubble-text {
  flex-grow: 1;
}

.feedback-icon {
  width: 36rpx;
  height: 36rpx;
  margin-left: 20rpx;
  transition: transform 0.3s ease;
}

.feedback-icon.beat {
  animation: heart-beat 0.5s ease-in-out;
}

@keyframes heart-beat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.3); }
}

.bubble::after {
  content: '';
  position: absolute;
  top: 50%;
  left: -18rpx;
  transform: translateY(-50%);
  width: 0;
  height: 0;
  border-top: 15rpx solid transparent;
  border-bottom: 15rpx solid transparent;
  border-right: 20rpx solid #ffffff;
}

/* 计时器区域 */
.timer-section {
  flex-grow: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

/* 底部按钮区域 */
.actions-section {
  width: 100%;
  padding-bottom: env(safe-area-inset-bottom, 50rpx); /* 适配iPhone底部安全区 */
}

.action-button {
  width: 300rpx;
  height: 90rpx;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  transition: transform 0.1s ease;
}

.finish-button {
  background-color: #ffebee;
  color: #d32f2f;
}

.button-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 15rpx;
}

.button-hover {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 总结弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.summary-modal {
  width: 85%;
  background-color: white;
  border-radius: 30rpx;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.summary-modal.animated {
  animation: modal-pop-in 0.4s cubic-bezier(0.68, -0.55, 0.27, 1.55);
}

@keyframes modal-pop-in {
  0% { transform: scale(0.7); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.modal-badge {
  width: 120rpx;
  height: 120rpx;
  margin-top: -100rpx;
  margin-bottom: 20rpx;
}

.modal-title {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
  color: #333;
}

.modal-content {
  width: 100%;
  margin-bottom: 60rpx;
}

.summary-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.summary-item:first-child {
  margin-bottom: 40rpx;
}

.item-label {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.item-value {
  font-size: 48rpx;
  font-weight: bold;
}
.item-value.subject {
  color: #333;
}
.item-value.duration {
  color: #007AFF;
  font-family: monospace;
}

.modal-actions {
  width: 100%;
}

.confirm-button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #007AFF;
  color: white;
  border-radius: 45rpx;
  font-size: 34rpx;
}

.button-hover-confirm {
  background-color: #0056b3;
}