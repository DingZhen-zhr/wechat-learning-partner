/* pages/homepage/homepage.wxss */
page {
  background-color: #f7f8fa;
}

.homepage-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f8fa;
}

/* 问候卡片样式 */
.greeting-card-wrapper {
  padding: 30rpx 30rpx 20rpx;
}

/* 学习概览卡片样式 */
.summary-card {
  margin: 0 30rpx 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.summary-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.summary-body {
  display: flex;
  justify-content: space-around;
  text-align: center;
  margin-bottom: 20rpx;
}

.summary-item .value {
  font-size: 48rpx;
  font-weight: bold;
  color: #007aff;
  display: block;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.summary-item .label {
  font-size: 24rpx;
  color: #888;
}

/* 计划列表区域 */
.plan-list-section {
  flex-grow: 1;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.plan-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.add-plan-button {
  width: 60rpx;
  height: 60rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-plan-button image {
  width: 32rpx;
  height: 32rpx;
}

.button-hover-light {
  background-color: #e0e0e0;
}

.plan-list {
  height: 100%;
}

